{
  "compilerOptions": {
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "jsx": "react-native",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "src/@types/**/*"]
}
